}
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.DrinkingWater.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.DrinkingWater.Date)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.DrinkingWater.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.DrinkingWater.Quantity)
        </dd>
    </dl>

    <form method="post">
